{
  "manifest_version": 3,
  "name": "Logging Console",
  "version": "1.0.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "icons": {
    "128": "terminal.svg"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "https://localhost/*"],
      "js": ["src/content.ts", "src/jsonView.js"],
      "styles": ["src/jsonView.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/injection-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
